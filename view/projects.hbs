<html>

<head>
    <title>Projects</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="styles/inbox.css">
    <link rel="stylesheet" href="styles/common.css">

</head>

<body class='overflow-hidden  my-bg'>
    <!-- Navbar from bootstrap docs -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light my-nav-flow">
        <a href="/"><img src="./images/logo/logo.png"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="/dashboard">Dashboard</a>
                <a class="nav-item nav-link" href="/find">Find</a>
                <a class="nav-item nav-link active" href="/projects">Projects</a>
                <a class="nav-item nav-link" href="/invitation">Invitation</a>
                <!-- <a class="nav-item nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a> -->
            </div>
        </div>
        <div class="dropdown mr-2">
            <button class="btn btn-link dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                Settings
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="/account_setting">Account Settings</a>
                <a class="dropdown-item" href="/users/logout">Log out</a>
            </div>
        </div>
    </nav>

    <!--actual page content-->
    <!--First three divs are for floating card visual effect-->
    <div class="vertical-center pt-5">
        <div class="h-100 row align-items-center justify-content-center" style="overflow-y: auto">
            <div class="container">
                <div class="add-btn-container">
                    <a href="/add_project" class="btn btn-primary">Add Project</a>
                </div>
                <!-- <div id="content" class="shadow-lg p-5 rounded col-lg-10 d-flex flex-column" style="margin: auto;"> -->
                <div id="content" class="row text-center shadow-lg rounded project-list-container">
                    {{#if empty_projects}}
                    <h5 style='color:white;margin:auto;text-align:center'>It looks like you don't have any projects
                        right now.</h1>
                        {{/if}}
                        {{#each projects}}
                        <!--One demo project-->
                        <div id=_{{this._id}} class="col-md-4 col-sm-6">
                            <div class="thumbnail bg-white m-2 rounded">
                                <div class="caption">
                                    <h5>{{this.course_code}} {{this.name}}</h5>
                                </div>

                                <!-- Limit the description to 200 characters maximum -->
                                <p class="m-3">{{this.description}}</p>
                                <a href="#teammateContainer_{{this._id}}" class="btn btn-primary"
                                    data-toggle="collapse">View Teammates</a>
                                <div id="teammateContainer_{{this._id}}" class="collapse">
                                    <ul class="team-list">
                                        {{#each this.teammates}}
                                        <li>{{this.name}}</li>
                                        {{/each}}
                                    </ul>
                                </div>
                                <div>
                                    {{!-- <a href ="/finish_project/{{this._id}}"> --}}
                                    <button id="Finish" class="btn btn-primary rounded action-btn" type="button"
                                        onclick='finish_project("_{{this._id}}")'>Finish</button>
                                    {{!-- </a> --}}
                                    <button id='Quit' onclick='quit_project("_{{this._id}}")'
                                        class="btn btn-danger rounded action-btn" type="button">Quit</button>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                </div>

            </div>

        </div>
    </div>

    <script src="scripts/projects.js"></script>
</body>

</html>